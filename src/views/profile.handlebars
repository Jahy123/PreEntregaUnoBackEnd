<h1>Mi Perfil</h1>

<div class="profile-card">
  <p>Bienvenido {{user.nombre}} {{user.apellido}}!</p>
  <p>Rol: {{user.role}}</p>

  <form action="/api/users/logout" method="POST">
    <button class="btn" type="submit">Logout</button>
  </form>

  {{#if this.isAdmin}}
    <a class="btn" href="/realtimeproducts">Modificar Productos</a>
  {{else}}
    <a class="btn" href="/chat">Chat en vivo</a>
    <a class="btn" href="/products">Tienda</a>
  {{/if}}
</div>